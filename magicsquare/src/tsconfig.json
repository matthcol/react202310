{
    "compilerOptions": {
      "outDir": "build/dist",
      "module": "esnext",
      "target": "ES2015",
      "lib": [
        "es6",
        "dom"
      ],
      "sourceMap": true,
      "allowJs": true,
      "jsx": "react",
      "moduleResolution": "node",
      "rootDir": "src",
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": true
    },
    "include": [
      "**/*.ts",
      "**/*.tsx"
    ]
  }